{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": false,
    "declaration": true,
    "declarationMap": false,
    "incremental": true,
    "composite": true
  },
  "references": [
    { "path": "./src" },
    { "path": "./tests" }
  ],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "files": true
  }
}
